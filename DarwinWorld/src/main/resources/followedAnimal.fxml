<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="presenter.AnimalStatisticsPresenter"
      prefHeight="400.0" prefWidth="600.0">
    <Label styleClass="header" fx:id="isFollowedAnimal" text="NO ANIMAL IS BEING TRACKED" alignment="CENTER"/>

    <HBox>
        <Label text="Genome: " minWidth="100"/>
        <ScrollPane fx:id="followedGenome" minHeight="50" minWidth="50" maxHeight="50"/>
    </HBox>

    <HBox>
        <Label text="Energy: "/>
        <Label fx:id="followedEnergy"/>
    </HBox>

    <HBox>
        <Label text="Eaten plants: "/>
        <Label fx:id="followedPlants"/>
    </HBox>

    <HBox>
        <Label text="Number of children: "/>
        <Label fx:id="followedChildren"/>
    </HBox>

    <HBox>
        <Label text="Number of descendants: "/>
        <Label fx:id="followedDescendants"/>
    </HBox>

    <HBox>
        <Label fx:id="isFollowedAlive" text="Days alive: "/>
        <Label fx:id="followedDays"/>
    </HBox>
</VBox>

